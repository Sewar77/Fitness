@model IEnumerable<MyFitnessLife.Models.Membershipplan>
@{
    ViewData["Title"] = "index";
    Layout = "~/Views/Shared/HomeLayout.cshtml";
}

<table class="table table-striped table-hover text-center align-middle mb-0 border">
    <thead>
        <tr class="rg-primary text-black">
            <th scope="col">Plan Name</th>
            <th scope="col">Duration (Months)</th>
            <th scope="col">Description</th>
            <th scope="col">Price ($)</th>
            <th scope="col">Created At</th>
            <th scope="col">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr> 
                <td>@item.Planname</td>
                <td>@item.Durationinmonths month</td>
                <td>@item.Description</td>
                <td>@item.Price $</td>
                <td>@item.Createdat</td>
                <td>
                    <a class="btn btn-sm btn-outline-secondary" asp-controller="Membershipplans" asp-action="Details" asp-route-id="@item.Planid">Details</a>
                </td>
            </tr>
        }
    </tbody>
</table>

























