@{
    ViewData["Title"] = "Subscribe";
    Layout = "~/Views/Shared/HomeLayout.cshtml";
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Subscription Page</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
</head>

<body>
    <div class="container mt-5">
        <h2 class="text-center">Subscribe to Plan</h2>

        <!-- Plan Details Section -->
        <div class="card mb-4">
            <div class="card-header">
                <h4>@Model.Plan.Planname</h4>
            </div>
            <div class="card-body">
                <p><strong>Description:</strong> @Model.Plan.Description</p>
                <p><strong>Price:</strong> @Model.Plan.Price</p>
                <p><strong>Duration:</strong> @Model.Plan.Durationinmonths months</p>
            </div>
        </div>

        <!-- Credit Card Form Section -->
        <div class="card">
            <div class="card-header">
                <h5>Enter Payment Information</h5>
            </div>
            <div class="card-body">
                <form method="post" asp-action="ProcessSubscription">
                    <div class="mb-3">
                        <label for="Fname" class="form-label">Credit Card Number</label>
                        <input type="text" class="form-control" id="Fname" name="Fname" required />
                    </div>
                    <div class="mb-3">
                        <label for="Email" class="form-label">Credit Card Number</label>
                        <input type="email" class="form-control" id="Email" name="Email" required />
                    </div>
                    <div class="mb-3">
                        <label for="card" class="form-label">Credit Card Number</label>
                        <input type="text" class="form-control" id="card" name="card" required />
                    </div>
                    <button type="submit" class="btn btn-primary">Complete Subscription</button>
                </form>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</body>

</html>

